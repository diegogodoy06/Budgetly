const API_BASE_URL = (import.meta as any).env?.VITE_API_URL || 'http://localhost:8000';

// Create axios instance
const api = axios.create({
  baseURL: API_BASE_URL,
  headers: {
    'Content-Type': 'application/json',
  },
});

// Request interceptor to add auth token and workspace
api.interceptors.request.use(
  (config) => {
    const token = localStorage.getItem('token');
    const currentWorkspaceId = localStorage.getItem('current_workspace_id');
    
    console.group(`üöÄ API Request: ${config.method?.toUpperCase()} ${config.url}`);
    console.log('üìç URL completa:', `${config.baseURL}${config.url}`);
    console.log('üîë Token presente:', !!token);
    console.log('üè¢ Workspace ID:', currentWorkspaceId || 'Nenhum');
    
    if (token) {
      const tokenPrefix = token.substring(0, 10);
      console.log('üîë Token prefix:', tokenPrefix + '...');
      config.headers.Authorization = `Token ${token}`;
      console.log('ÔøΩ Authorization header definido:', `Token ${tokenPrefix}...`);
    } else {
      console.log('‚ö†Ô∏è Nenhum token encontrado no localStorage');
    }
    
    // N√£o adicionar workspace ID para endpoints de autentica√ß√£o
    const authEndpoints = [
      '/api/accounts/login/', 
      '/api/accounts/register/', 
      '/api/accounts/logout/',
      '/api/accounts/profile/',
      '/api/accounts/workspaces/'
    ];
    const isAuthEndpoint = authEndpoints.some(endpoint => config.url?.includes(endpoint));
    
    if (!isAuthEndpoint) {
      // Adicionar workspace ID se dispon√≠vel e n√£o for endpoint de auth
      if (currentWorkspaceId) {
        config.headers['X-Workspace-ID'] = currentWorkspaceId;
        console.log('üè¢ X-Workspace-ID header definido:', currentWorkspaceId);
      } else {
        console.log('‚ö†Ô∏è Requisi√ß√£o sem workspace ID');
      }
    } else {
      console.log('üîê Endpoint de autentica√ß√£o, n√£o enviando workspace ID');
    }
    
    console.log('üìã Headers finais:', {
      Authorization: config.headers.Authorization ? 'Token ***' : 'N√£o definido',
      'X-Workspace-ID': config.headers['X-Workspace-ID'] || 'N√£o definido',
      'Content-Type': config.headers['Content-Type']
    });
    console.groupEnd();
    
    return config;
  },
  (error) => {
    console.error('‚ùå Erro no request interceptor:', error);
    return Promise.reject(error);
  }
);

// Response interceptor for error handling
api.interceptors.response.use(
  (response) => response,
  (error) => {
    console.log('üö® Interceptor de resposta - Erro capturado:', {
      status: error.response?.status,
      url: error.config?.url,
      message: error.response?.data?.detail || error.message,
      hasToken: !!localStorage.getItem('token'),
      authHeader: error.config?.headers?.Authorization
    });
    
    // Se o erro for 401 (Unauthorized), faz logout
    if (error.response?.status === 401) {
      console.log('üîí Erro 401 detectado');
      
      // Verificar se n√£o √© um endpoint de autentica√ß√£o que est√° falhando
      const authEndpoints = [
        '/api/accounts/login/', 
        '/api/accounts/register/', 
        '/api/accounts/profile/',
        '/api/accounts/workspaces/'  // Adicionado - este √© um endpoint de auth!
      ];
      const isAuthEndpoint = authEndpoints.some(endpoint => error.config?.url?.includes(endpoint));
      
      if (!isAuthEndpoint) {
        console.log('üîí Erro 401 em endpoint n√£o-auth - fazendo logout autom√°tico');
        localStorage.removeItem('token');
        localStorage.removeItem('user');
        localStorage.removeItem('current_workspace_id');
        
        // S√≥ redireciona se n√£o estiver j√° na p√°gina de login
        if (window.location.pathname !== '/login') {
          console.log('üîÑ Redirecionando para login devido ao erro 401');
          window.location.href = '/login';
        }
      } else {
        console.log('üîí Erro 401 em endpoint de auth - n√£o fazendo logout autom√°tico');
      }
    }

    return Promise.reject(error);
  }
);

